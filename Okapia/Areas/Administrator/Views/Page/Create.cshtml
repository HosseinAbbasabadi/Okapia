                <label asp-for="PageTittle" class="control-label"></label>
                <input asp-for="PageTittle" class="form-control" />
                <span asp-validation-for="PageTittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageSlug" class="control-label"></label>
                <input asp-for="PageSlug" class="form-control" />
                <span asp-validation-for="PageSlug" class="text-danger"></span>
            </div>
            <div class="form-group">
