            <div class="form-group">
                <label asp-for="PageContent" class="control-label"></label>
                <textarea name="editor1" asp-for="PageContent" class="form-control"></textarea>
                <span asp-validation-for="PageContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageRegisteringEmployeeId" class="control-label"></label>
