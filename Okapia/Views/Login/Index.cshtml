@model Login
@{
    ViewData["Title"] = "صفحه ورود کاربران";
}

@using (Html.BeginForm("SignIn", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">نام کاربری(کدملی):</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "0020516131", tabindex = 1 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Username)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-3 control-label">کلمه عبور(شماره تلفن همراه):</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "09102003040", tabindex = 1 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Password)</p>
        </div>
    </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary btn-lg">ورود</button>
    </div>
  </div>
  <h3 class="text-danger">@ViewData["Error"]</h3>
}