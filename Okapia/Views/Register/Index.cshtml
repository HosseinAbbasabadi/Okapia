@model Customer
@{
    ViewData["Title"] = "Register Page";
}

@using (Html.BeginForm("SignUp", "Register", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">First Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Firstname", tabindex = 1 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Name)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">Last Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Family, new { @class = "form-control", placeholder = "Lastname", tabindex = 1 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Family)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge2" class="col-sm-3 control-label">National Card Number</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.NationalCardNumber, new { @class = "form-control", placeholder = "National card number", tabindex = 2 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.NationalCardNumber)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge3" class="col-sm-2 control-label">Phone Number</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Message", tabindex = 3 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.PhoneNumber)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge3" class="col-sm-2 control-label">Address</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Address, new { @class = "form-control", placeholder = "Address", tabindex = 3 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Address)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge3" class="col-sm-3 control-label">First Card Number</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Card1, new { @class = "form-control", placeholder = "Message", tabindex = 3 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Card1)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge3" class="col-sm-3 control-label">Second Card Number</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Card2, new { @class = "form-control", placeholder = "Message", tabindex = 3 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Card2)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge3" class="col-sm-3 control-label">Third Card Number</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Card3, new { @class = "form-control", placeholder = "Message", tabindex = 3 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Card3)</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary btn-lg">Register User</button>
        </div>
    </div>
}