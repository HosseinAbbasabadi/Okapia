@model Customer
@{
    ViewData["Title"] = "ثبت نام کاربران";
}

@using (Html.BeginForm("SignUp", "Register", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">نام:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "علی", tabindex = 1 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Name)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge1" class="col-sm-2 control-label">نام خانوادگی:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Family, new { @class = "form-control", placeholder = "علوی", tabindex = 1 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Family)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge2" class="col-sm-3 control-label">شماره ملی:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.NationalCardNumber, new { @class = "form-control", placeholder = "0020304060", tabindex = 2 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.NationalCardNumber)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge3" class="col-sm-2 control-label">شماره تلفن همراه:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "09102003040", tabindex = 3 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.PhoneNumber)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge3" class="col-sm-2 control-label">آدرس:</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.Address, new { @class = "form-control", placeholder = "تهران-سعادت آباد", tabindex = 3 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Address)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge3" class="col-sm-3 control-label">شماره ۱۶ رقمی کارت اول:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Card1, new { @class = "form-control", placeholder = "5022-2910-1011-1213", tabindex = 3 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Card1)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge3" class="col-sm-3 control-label">شماره ۱۶ رقمی کارت دوم:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Card2, new { @class = "form-control", placeholder = "5022-2910-1011-1213", tabindex = 3 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Card2)</p>
        </div>
    </div>
    <div class="form-group">
        <label for="formGroupInputLarge3" class="col-sm-3 control-label">شماره ۱۶ رقمی کارت سول:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Card3, new { @class = "form-control", placeholder = "5022-2910-1011-1213", tabindex = 3 })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Card3)</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary btn-lg">ثبت نام</button>
        </div>
    </div>
}