@{
  Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
  <title>PFileManager</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
        crossorigin="anonymous">

  <link href="~/assets/fileManager/FontAwseome.css" rel="stylesheet"/>
  <link href="~/assets/fileManager/PFileManager.css" rel="stylesheet">
  <link href="~/assets/fileManager/cropper.min.css" rel="stylesheet"/>

</head>

<body>
<div class="PFileManager">
  <div class="container-fluid">
    <div class="row">

      <div class="col-8 col-md-9">
        <div class="FileContainer">
          <div class="NavBar">
            <ul>
              <li>
                <a id="CrFolder" href="javascript:void(0)" data-toggle="modal" data-target="#DirModal" title="ایجاد فولدر">
                  <span class="fa fa-folder-open">ایجاد پوشه</span>
                </a>
              </li>
              <li>
                <a href="javascript:void(getPageData())" title="بارگذاری مجدد">
                  <span class="fa  fa-refresh">بارگذاری مجدد</span>
                </a>
              </li>
              <li>
                <a href="javascript:void(0)" title="آپلود">
                  <label for="File">
                    <span class="fas fa-cloud-upload-alt">آپلود</span>
                  </label>
                  <input type="file" multiple onchange="overView(this)" style="display: none" id="File"/>
                </a>
              </li>
            </ul>
          </div>
          <div class="FileDivider">
            <div class="container-fluid">
              <div class="row" id="FilesRow">

              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-4 col-md-3">
        <div class="directories">
          <h6 class="text-center">فولدرها</h6>
          <a href="javascript:void(0)" onclick="BackDir()" title="بازگشت">
            <span class="fa fa-arrow-left">بازگشت</span>
          </a>
          <ul id="Dir"></ul>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="ModalFile" tabindex="-1" role="dialog" aria-labelledby="ModalFileLabel" aria-hidden="true">
  <div class="modal-dialog " role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center" id="body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" onclick="removeFiles()" data-dismiss="modal">انصراف</button>
        <button type="button" id="buttonSave" class="btn btn-primary" onclick="Upload()">آپلود</button>
      </div>
    </div>
  </div>
</div>
<!--Modal Directory-->
<div class="modal fade" id="DirModal" tabindex="-1" role="dialog" aria-labelledby="ModalFileLabel" aria-hidden="true">
  <div class="modal-dialog " role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <label for="DirName">نام فولدر :</label><input type="text" id="DirName" class="form-control"/>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" onclick="removeFiles()" data-dismiss="modal">انصراف</button>
        <button type="button" id="buttonSave" class="btn btn-primary" onclick="CreateNewFolder()">ایجاد</button>
      </div>
    </div>
  </div>
</div>
<div id="Loader">
  <div class="loader-container">
    <div class="loader-div">
      <div class="loader-div">
        <div class="loader-div">
          <div class="loader-div">

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="~/assets/fileManager/jquery-3.0.0.min.js"></script>
<script src="~/assets/fileManager/popper.min.js"></script>
<script src="~/assets/fileManager/bootstrap.min.js"></script>

<script src="~/assets/fileManager/PFileManager.js"></script>
<script src="~/assets/fileManager/image-compressor.min.js"></script>
<script src="~/assets/fileManager/cropper.min.js"></script>


<script>
  $(function() {
    getPageData('');
  })
</script>
</body>

</html>