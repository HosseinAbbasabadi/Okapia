@using Okapia.Application.Utilities
@model Okapia.Domain.SeachModels.CommentSearchModel
<hr/>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-border panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">جستجو در کامنت ها</h2>
      </div>
      <div class="panel-body">
        <form asp-action="Index" asp-controller="Comment" method="GET">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="col-md-4">
            <div class="form-group">
              <label asp-for="CommentOwner" class="control-label"></label>
              <input asp-for="CommentOwner" class="form-control"/>
              <span asp-validation-for="CommentOwner" class="text-danger"></span>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label asp-for="CommentIsConfirmed" class="control-label"></label>
              <input asp-for="CommentIsConfirmed" class="form-control"/>
              <span asp-validation-for="CommentIsConfirmed" class="text-danger"></span>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label asp-for="CommentIsDeleted" class="control-label"></label>
              <input asp-for="CommentIsDeleted" class="form-control"/>
              <span asp-validation-for="CommentIsDeleted" class="text-danger"></span>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <input type="submit" value="جستجو" class="btn btn-primary"/>
              <a asp-area="Administrator" asp-controller="Comment" asp-action="Index" class="btn btn-warning">به روزرسانی/پاکسازی فرم جستجو</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>