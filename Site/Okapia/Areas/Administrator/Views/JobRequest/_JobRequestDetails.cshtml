@model Okapia.Domain.ViewModels.JobRequest.JobRequestViewModel
<div id="jobRequestDetailsModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="custom-width-modalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog" style="width: 55%;">
    <div class="modal-content">
      <div class="modal-header">
