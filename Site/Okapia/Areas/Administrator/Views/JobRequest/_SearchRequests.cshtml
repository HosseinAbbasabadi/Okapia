@model Okapia.Domain.SeachModels.JobRequestSearchModel
<hr/>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-border panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">جستجو در درخواست ها</h2>
      </div>
      <div class="panel-body">
        <form asp-action="Index" asp-controller="JobRequest" method="GET">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="col-md-4">
            <div class="form-group">
              <label asp-for="Name" class="control-label"></label>
              <input asp-for="Name" class="form-control"/>
              <span asp-validation-for="Name" class="text-danger"></span>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label asp-for="ContactTitle" class="control-label"></label>
              <input asp-for="ContactTitle" class="form-control"/>
              <span asp-validation-for="ContactTitle" class="text-danger"></span>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label asp-for="ProvinceId" class="control-label"></label>
              <select asp-for="ProvinceId" asp-items="@Model.Provinces" class="form-control" id="searchProvinceDropDown" onchange="getCityList('searchProvinceDropDown', '@Url.Action("GetCitiesByProvince", "City")', 'searchCityDropDown')">
                <option value="">استان را انتخاب کنید...</option>
              </select>
              <span asp-validation-for="ProvinceId" class="text-danger"></span>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label asp-for="CityId" class="control-label"></label>
              <select asp-for="CityId" class="form-control" id="searchCityDropDown" onchange="getCityList('searchCityDropDown', '@Url.Action("GetCitiesByProvince", "City")', 'searchDistrictDropDown')">
                <option value="">شهر را انتخاب کنید...</option>
              </select>
              <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <input type="submit" value="جستجو" class="btn btn-primary"/>
              <a asp-area="Administrator" asp-controller="JobRequest" asp-action="Index" class="btn btn-warning">به روزرسانی/پاکسازی فرم جستجو</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>