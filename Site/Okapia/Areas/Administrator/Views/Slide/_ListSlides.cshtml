@using Microsoft.AspNetCore.Http.Extensions
@using Okapia.Domain.SeachModels
@model IEnumerable<Okapia.Domain.ViewModels.Slide.SlideViewModel>
@{
  var searchModel = ViewData["searchModel"] as SlideSearchModel;
}

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-border panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">لیست اسلایدها</h2>
      </div>
      <div class="panel-body">
        <table id="datatable" class="table table-striped table-bordered">
          <thead>
          <tr>
          <th>
            ردیف
          </th>
          <th>
            @Html.DisplayNameFor(model => model.SlideName)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Province)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.SlideCreationDate)
          </th>
          <th>
            عملیات
          </th>

          </thead>
          <tbody>
          @foreach (var item in Model.Select((value, index) => new {index, value}))
          {
            <tr>
              <td>
                @{
                  var index = item.index;
                  index += 1;
                }
                @index
              </td>
              <td>
                <img src="~/SlidePhotos/Thumbs/@item.value.SlideName" with="100" height="100"/>
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.value.Province)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.value.SlideCreationDate)
              </td>
              <td>
                <a class="btn btn-sm btn-info" asp-area="Administrator" asp-controller="Slide" asp-action="Edit" asp-route-id="@item.value.SlideId" asp-route-redirectUrl="@Context.Request.GetDisplayUrl()">ویرایش</a>
                @if (!item.value.SlideIsDeleted)
                {
                  <a class="btn btn-sm btn-danger" asp-area="Administrator" asp-controller="Slide" asp-action="Delete" asp-route-id="@item.value.SlideId">حذف</a>
                }
                else
                {
                  <a class="btn btn-sm btn-success" asp-area="Administrator" asp-controller="Slide" asp-action="Activate" asp-route-id="@item.value.SlideId">فعال سازی</a>
                }
              </td>
            </tr>
          }
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-12">
            تعداد کل رکوردها: @searchModel.RecordCount
          </div>
        </div>

      </div>
      <nav>
        <ul class="pagination">
          @for (var i = 0; i < searchModel.PageCount; i++)
          {
            var routingSearchModel = new SlideSearchModel
            {
              SlideFromCreationDate = searchModel.SlideFromCreationDate,
              SlideToCreationDate = searchModel.SlideToCreationDate,
              SlideIsDeleted = searchModel.SlideIsDeleted,
              PageSize = 20,
              PageIndex = i
            };
            if (searchModel.PageIndex == i)
            {
              <li class="active">
                @Html.ActionLink((i + 1).ToString(), "Index", "Slide", routingSearchModel)
              </li>
            }
            else
            {
              <li>
                @Html.ActionLink((i + 1).ToString(), "Index", "Slide", routingSearchModel)
              </li>
            }
          }
        </ul>
      </nav>
    </div>
  </div>
</div>