@using Microsoft.AspNetCore.Http.Extensions
@using Okapia.Domain.SeachModels
@model IEnumerable<Okapia.Domain.ViewModels.Link.LinkViewModel>
@{
  var searchModel = ViewData["searchModel"] as LinkSearchModel;
}
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-border panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">لیست لینک ها</h2>
      </div>
      <div class="panel-body">
        <table id="datatable" class="table table-striped table-bordered">
          <thead>
          <tr>
          <th>
            ردیف
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Label)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Target)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Category)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.CreationDate)
          </th>
          <th>
            عملیات
          </th>

          </thead>
          <tbody>
          @foreach (var item in Model.Select((value, index) => new {index, value}))
          {
            <tr>
              <td>
                @{
                  var index = item.index;
                  index += 1;
                }
                @index
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.value.Label)
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.value.Target)
              </td>
              <td>
                @if (item.value.Category == 1)
                {
                  <span>دسترسی سریع</span>
                }
                else
                {
                  <span>مطالب مهم</span>
                }
              </td>
              <td>
                @Html.DisplayFor(modelItem => item.value.CreationDate)
              </td>
              <td>
                <a class="btn btn-sm btn-info" onclick="openEditCityModal('@item.value.Id')">ویرایش</a>
                @if (!item.value.IsDeleted)
                {
                  <a class="btn btn-sm btn-danger" asp-area="Administrator" asp-controller="Link" asp-action="Delete" asp-route-id="@item.value.Id">حذف</a>
                }
                else
                {
                  <a class="btn btn-sm btn-success" asp-area="Administrator" asp-controller="Link" asp-action="Activate" asp-route-id="@item.value.Id">فعال سازی</a>
                }
              </td>
            </tr>
          }
          </tbody>
        </table>
        <div class="row">
          <div class="col-md-12">
            تعداد کل رکوردها: @searchModel.RecordCount
          </div>
        </div>
      </div>
      <nav>
        <ul class="pagination">
          @for (var i = 0; i < searchModel.PageCount; i++)
          {
            var routingSearchModel = new LinkSearchModel
            {
              Label = searchModel.Label,
              Category = searchModel.Category,
              IsDeleted = searchModel.IsDeleted,
              PageSize = 80,
              PageIndex = i
            };
            if (searchModel.PageIndex == i)
            {
              <li class="active">
                @Html.ActionLink((i + 1).ToString(), "Index", "Link", routingSearchModel)
              </li>
            }
            else
            {
              <li>
                @Html.ActionLink((i + 1).ToString(), "Index", "Link", routingSearchModel)
              </li>
            }
          }
        </ul>
      </nav>
    </div>
  </div>
</div>

<div id="editLinkDiv">

</div>
<script>
  function openEditCityModal(id) {
    openModalWithData(`@Url.Action("Edit", "Link")/${id}`, 'editLinkDiv', 'editLinkModal');
  }
</script>