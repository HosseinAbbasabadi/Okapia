@using Okapia.Domain.Commands.Category
@model Okapia.Domain.Commands.Modal.CreateModal

@{
  ViewData["Title"] = "ایجاد اعلانیه جدید";
}

<h1>فرم ایجاد اعلانیه</h1>

<h4>برای ثبت اعلانیه جدید فرم زیر را کامل کنید</h4>

<hr/>
<div class="row">
  <div class="col-md-12">
    <form method="post" id="createModalFrm">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="col-md-4">
        <div class="form-group">
          <label asp-for="Title" class="control-label"></label>
          <input asp-for="Title" class="form-control" />
          <span asp-validation-for="Title" class="text-danger"></span>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label asp-for="Message" class="control-label"></label>
          <input asp-for="Message" class="form-control"/>
          <span asp-validation-for="Message" class="text-danger"></span>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label asp-for="PageLink" class="control-label"></label>
          <input asp-for="PageLink" class="form-control direct-ltr"/>
          <span asp-validation-for="PageLink" class="text-danger"></span>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label asp-for="StartDate" class="control-label"></label>
          <div class="input-group">
            <div class="input-group-addon" data-MdDateTimePicker="true" data-trigger="click" data-targetselector="#fromDate1" data-groupid="group1" data-fromdate="true" data-enabletimepicker="false" data-placement="left">
              <span class="fa fa-calendar"></span>
            </div>
            <input asp-for="StartDate" type="text" class="form-control" id="fromDate1" placeholder="از تاریخ" data-MdDateTimePicker="true" data-trigger="click" data-targetselector="#fromDate1" data-groupid="group1" data-fromdate="true" data-enabletimepicker="false" data-placement="right"/>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label asp-for="EndDate" class="control-label"></label>
          <div class="input-group">
            <div class="input-group-addon" data-MdDateTimePicker="true" data-trigger="click" data-targetselector="#toDate1" data-groupid="group1" data-todate="true" data-enabletimepicker="false" data-placement="left">
              <span class="fa fa-calendar"></span>
            </div>
            <input asp-for="EndDate" type="text" class="form-control" id="toDate1" placeholder="تا تاریخ" data-MdDateTimePicker="true" data-trigger="click" data-targetselector="#toDate1" data-groupid="group1" data-todate="true" data-enabletimepicker="false" data-placement="right"/>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label asp-for="GroupId" class="control-label"></label>
          <select asp-for="GroupId" asp-items="@Model.Groups" class="select2">
            <option value="0">گروه را انتخاب کنید...</option>
          </select>
          <span asp-validation-for="GroupId" class="text-danger"></span>
        </div>
      </div>
      <table class="col-md-12 table table-bordered text-center">
        <tr>
          <td>فایل</td>
          <td>عنوان عکس</td>
          <td>Alt</td>
          <td>توضیحات</td>
          <td>پیش نمایش</td>
          <td>حذف</td>
        </tr>
        <tr>
          <td>
            <input id="modalPicture" name="modalPicture" type="file" size="1" onchange="uploadFile('modalPicture', 'PicName', 'deleteImage', 'Modal');PreviewImage('modalPicture', 'prevImage');" class="form-control custom-file-input" accept="image/*"/>
            <input asp-for="PicName" type="hidden" size="1" value=""/>
          </td>
          <td>
            <div class="form-group">
              <input asp-for="PicTitle" class="form-control"/>
              <span asp-validation-for="PicTitle" class="text-danger"></span>
            </div>
          </td>
          <td>
            <div class="form-group">
              <input asp-for="PicAlt" class="form-control"/>
              <span asp-validation-for="PicAlt" class="text-danger"></span>
            </div>
          </td>
          <td>
            <div class="form-group">
              <input asp-for="PicDescription" class="form-control"/>
              <span asp-validation-for="PicDescription" class="text-danger"></span>
            </div>
          </td>
          <td>
            <img id="prevImage" src="~/defaultimage.png" alt="your image" with="100" height="100"/>
          </td>
          <td>
            <button type="button" id="deleteImage" onclick="deletePhoto('PicName', 'prevImage', 'deleteImage','PicTitle', 'PicAlt', 'PicDescription', 'Modal')" class="btn btn-danger hidden">حذف</button>
          </td>
        </tr>
      </table>

      <div class="col-md-6">
        <div class="form-group">
          <input type="button" value="ثبت" class="btn btn-success btn-lg" onclick="createEntityThenReferesh('@Url.Action("Create", "Modal")', 'createModalFrm')"/>
          <a class="btn btn-warning btn-lg" asp-action="Index" asp-controller="Modal" asp-area="Administrator">بازگشت به لیست</a>
        </div>
      </div>
    </form>
  </div>
</div>