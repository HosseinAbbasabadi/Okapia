@using Okapia.Domain.SeachModels
@model Okapia.Domain.Commands.User.SendToGroup

<div id="sendToGroupModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="custom-width-modalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog" style="width: 55%;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title" id="custom-width-modalLabel">ایجاد شهر جدید</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <form id="sendToGroupFrm" method="post" class="form-inline">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group">
                <label asp-for="GroupId" class="sr-only"></label>
                <select asp-for="GroupId" asp-items="@Model.Groups" class="form-control">
                  <option value="0">گروه مورد نظر را انتخاب کنید...</option>
                </select>
                <span asp-validation-for="GroupId" class="text-danger"></span>
              </div>
              <input type="button" value="انتقال به گروه" class="btn btn-purple" onclick="createEntityThenReferesh(`@Url.Action("SendToGroup", "User")/${$('#GroupId').val()}`, 'searchUsersFrm')"/>
            </form>
          </div>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->