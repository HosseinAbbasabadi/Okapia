@using Okapia.Domain.SeachModels
@model Okapia.Domain.Commands.User.SendToGroup

<form id="sendToGroupFrm" method="post" class="form-inline">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
      <label asp-for="GroupId" class="sr-only"></label>
      <select asp-for="GroupId" asp-items="@Model.Groups" class="form-control">
        <option value="0">گروه مورد نظر را انتخاب کنید...</option>
      </select>
      <span asp-validation-for="GroupId" class="text-danger"></span>
    </div>
  <input type="button" value="انتقال به گروه" class="btn btn-purple" onclick="createEntityThenReferesh('@Url.Action("SendToGroup", "User")', 'sendToGroupFrm')"/>
</form>