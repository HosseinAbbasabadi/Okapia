@model IEnumerable<Okapia.Domain.ViewModels.Job.JobItemViewModel>

<div class="row">
  @foreach (var jobItemViewModel in Model)
  {
    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 wow fadeInUp" data-wow-delay="0.4s">
      <div class="single-team" data-discount="@jobItemViewModel.BenefitPercentForEndCustomer%">
        <div class="single-team-img">
          <img src="~/JobPhotos/Thumbs/@jobItemViewModel.JobPicture" alt="@jobItemViewModel.JobPictureAlt">
        </div>
        <div class="team-meta">
          <div class="row">
            <div class="col-md-12">
              <h3>@jobItemViewModel.JobName</h3>
            </div>
            <div class="col-md-6">
              <span class="text-success">@jobItemViewModel.JobPrice</span>
            </div>
            <div class="col-md-6">
              <h5>@jobItemViewModel.City</h5>
            </div>
          </div>
        </div>
        <div class="clearfix">
          <div class="starRating">
            <div class="wrapper">
              @*<div class="star-rating">
                <i></i>
                <span style="width: 100%">
                  <span></span>
                </span>
              </div>*@
            </div>
          </div>
        </div>
        <a asp-action="Details" asp-controller="JobView" asp-route-id="@jobItemViewModel.JobSlug" class="bttn-small btn-fill">اطلاعات بیشتر</a>
      </div>
    </div>
  }
</div>