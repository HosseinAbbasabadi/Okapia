@model JobViewIndexViewModel

@{
    ViewData["Title"] = "مراکز خدماتی" + " " + Model.CategoryViewDetailsViewModel?.CategoryPageTittle;
    ViewData["MetaDescription"] = Model.CategoryViewDetailsViewModel?.CategoryMetaDesccription;
    ViewData["MetaTags"] = Model.CategoryViewDetailsViewModel?.CategoryMetaTag;
    ViewData["CanonicalAddress"] = Model.CategoryViewDetailsViewModel?.CategoryCanonicalAddress;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="custom-banner dark-overlay" style="background: url(/assets/images/hero.jpg) no-repeat fixed;"></section>

<section class="team-area section-padding-2">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-8 centered wow fadeInUp" data-wow-delay="0.3s">
        <div class="section-title">
          <h2>مراکز خدماتی</h2>
        </div>
      </div>
    </div>

    @await Html.PartialAsync("~/Views/JobView/_Search.cshtml", Model.JobViewSearchModel)
    @await Html.PartialAsync("~/Views/JobView/_List.cshtml", Model.JobItemViewModels)
    
  </div>
</section>