@model Okapia.Domain.ViewModels.PageCategory.PageCategoryBlogViewModel

@{
  ViewData["Title"] = "مقالات گروه" + " " + Model.PageCategoryName;
  ViewData["MetaDescription"] = Model.PageCategoryMetaDescription;
  ViewData["MetaTags"] = Model.MetaTags;
  ViewData["CanonicalAddress"] = Model.PageCategoryCanonicalAddress;
  Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="custom-banner dark-overlay" style="background: url(/assets/images/hero.jpg) no-repeat fixed;"></section>

<section class="blog-area section-padding-2">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-8 centered wow fadeInUp" data-wow-delay="0.3s">
        <div class="section-title">
          <h2>نوشته های وبلاگ</h2>
          <p>آخرین نوشته ها و آموزش های اوکاپیا</p>
        </div>
      </div>
    </div>
    <div class="row">
      @foreach (var pageItem in Model.Pages)
      {
        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="0.4s">
          <div class="single-blog-block">
            <div class="single-blog-block-img">
              <img src="/PagePhotos/@pageItem.PagePicture" alt="@pageItem.PagePictureAlt" title="@pageItem.PagePictureTitle">
              <a title="@pageItem.PageTitle" asp-controller="PageView" asp-action="Details" asp-route-id="@pageItem.PageSlug">
                <i class="fa fa-expand"></i>
              </a>
            </div>
            <div class="single-blog-block-content">
              <div class="blog-meta">
                <h3>
                 <a title="@pageItem.PageTitle" asp-controller="PageView" asp-action="Details" asp-route-id="@pageItem.PageSlug">@pageItem.PageTitle</a>
                </h3>
                <div class="blog-text">
                  <p>
                    @pageItem.PageSmallDescription
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      }
    </div>
  </div>
</section>