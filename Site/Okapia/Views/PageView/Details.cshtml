@inject IAuthHelper AuthHelper;
@using Okapia.Application.Contracts
@model PageDetailsIndexViewModel
@{
  ViewData["Title"] = Model.PageViewDetailsViewModel.PageTitle;
  ViewData["MetaDescription"] = Model.PageViewDetailsViewModel.PageMetaDescription;
  ViewData["MetaTags"] = Model.PageViewDetailsViewModel.PageMetaTag;
  ViewData["CanonicalAddress"] = Model.PageViewDetailsViewModel.PageCanonicalAddress;
  Layout = "~/Views/Shared/_Layout.cshtml";
  var province = ViewData["province"].ToString();
}


<div class="page-static">
  <div class="wrapper-2">
    <div class="container-fluid">
      <div class="row h-position">
        @await Component.InvokeAsync("FloatingCategories", new { pn = province })
        <div class="col-lg-22 col-md-22 col-sm-24 col-xs-24 clearfix page-aboutus">
          <div class="page-content">
            <div class="row part1">
              <div class="col-lg-24 col-md-24">
                <img src="/PagePhotos/@Model.PageViewDetailsViewModel.PagePicture" alt="@Model.PageViewDetailsViewModel.PagePictureAlt" title="@Model.PageViewDetailsViewModel.PagePictureTitle" class="wow fadeInUp" data-wow-delay="0.3s">
                <div class="header-aboutus">
                  <h1 class="ft-3">@Model.PageViewDetailsViewModel.PageTitle</h1>
                </div>
              </div>
            </div>
            <div class="row part2">
              <div data-wow-delay=".2s" data-wow-duration=".8s" class="col-lg-24 col-md-24 wow fadeIn">
                <h2 class="title1 ft-3">@Model.PageViewDetailsViewModel.PageTitle</h2>
                <p class="text1 ft-5"> @Model.PageViewDetailsViewModel.PageSmallDescription</p>
                <p class="text1 ft-5">@Html.Raw(Model.PageViewDetailsViewModel.PageDescription)</p>
              </div>
            </div>
          </div>
        </div>
        @await Component.InvokeAsync("CompanyNumbers")
      </div>
    </div>
  </div>
</div>