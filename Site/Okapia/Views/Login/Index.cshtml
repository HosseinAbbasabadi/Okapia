@model Login
@{
    ViewData["Title"] = "صفحه ورود مشتریان";
}

<h1>فرم ورود مشتریان</h1>

<h4>ورود به ناحیه کاربری</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="AdminSignIn">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Username" class="control-label">نام کاربری(کدملی):</label>
        <input asp-for="Username" class="form-control" placeholder = "0020516131" />
        <span asp-validation-for="Username" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Password" class="control-label">کلمه عبور(شماره تلفن همراه):</label>
        <input asp-for="Password" class="form-control" placeholder = "09102003040" />
        <span asp-validation-for="Password" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="ورود" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

