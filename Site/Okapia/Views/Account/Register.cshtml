@using Okapia.Domain.Commands.User
@model Okapia.Domain.Commands.User.CreateUser

@{
  ViewData["Title"] = "ثبت نام";
}
<!--Custom Banner-->
<section class="custom-banner dark-overlay" style="background: url(/assets/images/counter.jpg) no-repeat fixed;">
</section>
<!--/Custom Banner-->

<!--Login Area-->
<section class="form-area section-padding">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-8 centered">
        <div class="section-title">
          <h2>ثبت نام</h2>
        </div>
      </div>
      <div class="col-md-8">
        <form method="post" id="createUserFrm" asp-controller="Account" asp-action="Register">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="single-field">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
          <div class="single-field">
            <label asp-for="Family" class="control-label"></label>
            <input asp-for="Family" class="form-control" />
            <span asp-validation-for="Family" class="text-danger"></span>
          </div>
          @*<div class="single-field">
            <label asp-for="NameEn" class="control-label"></label>
            <input asp-for="NameEn" class="form-control" />
            <span asp-validation-for="NameEn" class="text-danger"></span>
          </div>
          <div class="single-field">
            <label asp-for="FamilyEn" class="control-label"></label>
            <input asp-for="FamilyEn" class="form-control" />
            <span asp-validation-for="FamilyEn" class="text-danger"></span>
          </div>*@
          <div class="single-field">
            <label asp-for="NationalCardNumber" class="control-label">کدملی(به عنوان نام کاربری)</label>
            <input asp-for="NationalCardNumber" class="form-control" />
            <span asp-validation-for="NationalCardNumber" class="text-danger"></span>
          </div>
          <div class="single-field">
            <label asp-for="PhoneNumber" class="control-label">موبایل(به عنوان رمز عبور)</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
          </div>
          <div class="single-field">
            <label asp-for="BirthDate" class="control-label"></label>
            <div class="input-group">
              <div class="input-group-addon" data-MdDateTimePicker="true" data-trigger="click" data-targetselector="#birthDate"  data-groupid="group1"  data-enabletimepicker="false" data-placement="left">
                @*<span class="fa fa-calendar"></span>*@
              </div>
              <input asp-for="BirthDate" type="text" class="form-control" id="birthDate" placeholder="تاریخ تولد" data-MdDateTimePicker="true" data-trigger="click" data-targetselector="#birthDate" data-groupid="group1" data-enabletimepicker="false" data-placement="right" readonly="readonly"/>
            </div>
          </div>
          <div class="single-field">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>
          <div id="bankCards">
            <div>
              <div class="single-field">
                <label asp-for="Card1" class="control-label"></label>
                <input asp-for="Card1" class="form-control direct-ltr" />
                <span asp-validation-for="Card1" class="text-danger"></span>
              </div>
            </div>
          </div>
          <button type="button" class="btn btn-success" onclick="dynamicCard('ui')">افزودن کارت</button>

          @*<div class="single-field">
      <div class="g-recaptcha" data-sitekey="6LeXubIUAAAAAPl-CpA4zsosiLVHjUbs6uLdQJsq"></div>
    </div>*@
          <br />
          <h3 class="text-danger">@ViewData["errorMessage"]</h3>
          <br />
          <div class="form-group">
            @*<input type="button" value="ثبت" class="btn btn-primary" onclick="createUser('@Url.Action("Register", "User")', 'createUserFrm', '@Url.Action("Index", "Home")')"/>*@
            <button type="submit" class="bttn-mid btn-fill">ثبت نام</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>