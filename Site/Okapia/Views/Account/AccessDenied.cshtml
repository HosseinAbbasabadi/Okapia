@{
  ViewData["Title"] = "عدم دسترسی به صفحه";
  Layout = "~/Views/Shared/_Layout.cshtml";
  var province = ViewData["province"].ToString();
}

<div class="page-static">
  <div class="wrapper-2">
    <div class="container-fluid">
      <div class="row h-position">

        @await Component.InvokeAsync("FloatingCategories", new { pn = province })

        <div class="col-lg-22 col-md-22 col-sm-24 col-xs-24 padd-0-xs clearfix page-news">
          <div class="art-border ct">
            <div class="cu-top">
              <h1 class="static-header">عدم دسترسی به صفحه درخواستی</h1>
            </div>
            <div class="col-md-12">
              <h2>
                  <a asp-controller="Home" asp-action="Index" asp-area="">خانه - صفحه اصلی سایت</a>
              </h2>
            </div>
          </div>
        </div>

        @await Component.InvokeAsync("CompanyNumbers")

      </div>
    </div>
  </div>
</div>