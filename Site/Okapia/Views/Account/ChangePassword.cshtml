@model Okapia.Domain.Commands.ChangePassword

@{
  ViewData["Title"] = "تغییر رمز عبور";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-signinup">
  <div class="wrapper-1">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-1 col-md-1 hidden-sm hidden-xs"></div>
        <div class="col-lg-10 col-md-10">
          <div class="panel panel-default">
            <div class="panel-body tab-content">
              <div class="nb-signinup-wrapper nb-signin tab-pane personal-tab fade in active">
                <p class="rb-header">رمز عبور جدید را وارد کنید</p>
                <form method="post" id="changePasswordFrm" asp-controller="Account" asp-action="ChangePasswordPage" asp-route-id="@ViewData["accountId"]" class="personal-pro">
                  <div style="display: none;">
                    <input type="hidden" name="_method" value="POST" />
                  </div>
                  <div class="nameandfname">
                    <div class="form-group input-label-animate">
                      <div class="input">
                        <label asp-for="NewPassword"></label>
                        <input asp-for="NewPassword" class="single-input" />
                      </div>
                      <span asp-validation-for="NewPassword" class="hint danger"></span>
                    </div>
                    <div class="form-group input-label-animate">
                      <div class="input">
                        <label asp-for="RepeatNewPassword"></label>
                        <input asp-for="RepeatNewPassword" class="single-input" />
                      </div>
                      <span asp-validation-for="RepeatNewPassword" class="hint danger"></span>
                    </div>
                  </div>

                  <div class="form-group">
                    <button type="submit" class="nb-btn nb-btn-success">ثبت</button>
                  </div>

                </form>
                <div class="link-signup clearfix">
                  <span>در اُکاپیا عضو نیستید؟</span>
                  <a asp-controller="Account" asp-action="Register"
                     class="not-register nb-btn nb-btn-sm nb-btn-border">
                    ثبت
                    نام کنید
                  </a>
                </div>
              </div>
            </div>
            <div class="circle-sign"></div>
            <div class="e"></div>
          </div>
        </div>
        <div class="col-lg-12 col-md-12 hidden-sm hidden-xs">
          <img src="~/assets/theme/img/finalOK.png"
               alt="netbarg-signin"
               class="img-responsive nb-center">
        </div>
      </div>
    </div>
  </div>
</div>