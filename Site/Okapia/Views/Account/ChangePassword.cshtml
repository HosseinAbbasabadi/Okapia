@model Okapia.Domain.Commands.ChangePassword

@{
  ViewData["Title"] = "تغییر رمز عبور";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="custom-banner dark-overlay" style="background: url('/assets/images/counter.jpg') no-repeat fixed;"></section>

<section class="form-area section-padding">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-8 centered">
        <div class="section-title">
          <h2>رمز عبور جدید را وارد کنید</h2>
        </div>
      </div>
      <div class="col-md-6">
        <form method="post" id="changePasswordFrm" asp-controller="Account" asp-action="ChangePasswordPage" asp-route-id="@ViewData["accountId"]">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group">
            <label asp-for="NewPassword" class="control-label"></label>
            <input asp-for="NewPassword" class="form-control direct-ltr" type="password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="RepeatNewPassword" class="control-label"></label>
            <input asp-for="RepeatNewPassword" class="form-control direct-ltr" type="password" />
            <span asp-validation-for="RepeatNewPassword" class="text-danger"></span>
          </div>
          <br/>
          <h3 class="text-danger">@ViewData["errorMessage"]</h3>
          <br/>
          <div class="form-group">
            <input type="submit" value="ثبت" class="bttn-mid btn-fill" />
          </div>
        </form>
      </div>
    </div>
  </div>
</section>