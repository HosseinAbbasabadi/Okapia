@model Okapia.Domain.Commands.User.Login
@{
  ViewData["Title"] = "صفحه ورود مشتریان";
}
<div class="page-signinup">
  <div class="wrapper-1">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-1 col-md-1 hidden-sm hidden-xs"></div>
        <div class="col-lg-10 col-md-10">
          <div class="panel panel-default">
            <div class="panel-body tab-content">
              <div class="nb-signinup-wrapper nb-signin tab-pane personal-tab fade in active">
                <p class="rb-header">ورود به حساب کاربری</p>
                <form method="post" accept-charset="utf-8" class="personal-pro ajaxform">
                  <div style="display: none;">
                    <input type="hidden" name="_method" value="POST"/>
                  </div>
                  <div class="nameandfname">
                    <div class="form-group req input-label-animate">
                      <div class="input email">
                        <label for="loginemail">نام کاربری</label>
                        <input type="text" asp-for="Username" class="single-input required-input"/>
                      </div>
                      <span class="hint danger"></span>
                    </div>
                    <div class="form-group req input-label-animate">
                      <div class="input password">
                        <label for="password">کلمه عبور</label>
                        <input type="password" asp-for="Password" class="single-input required-input password-check" id="password"/>
                      </div>
                      <span class="hint danger"></span>
                    </div>
                  </div>
                  <input type="hidden" asp-for="RedirectUrl" value="@ViewData["redirectUrl"]"/>

                  <div class="form-group remember-forget">
                    <div class="forget-pass">
                      <a asp-controller="Account" asp-action="ChooseFpMethod">رمز عبور خود را فراموش کرده اید؟</a>
                    </div>
                  </div>


                  <div class="form-group">
                    <button type="submit" class="nb-btn nb-btn-success">ورود</button>
                  </div>
                </form>
                <div class="link-signup clearfix">
                  <span>در اُکاپیا عضو نیستید؟</span>
                  <a asp-controller="Account" asp-action="Register"
                     class="not-register nb-btn nb-btn-sm nb-btn-border">
                    ثبت
                    نام کنید
                  </a>
                </div>
              </div>
            </div>
            <div class="circle-sign"></div>
            <div class="e"></div>
          </div>
        </div>
        <div class="col-lg-12 col-md-12 hidden-sm hidden-xs">
          <img src="~/assets/theme/img/signin.jpg"
               alt="netbarg-signin"
               class="img-responsive nb-center">
        </div>

      </div>
    </div>
  </div>
</div>

<div class="col-lg-1 col-md-1 hidden-sm hidden-xs"></div>