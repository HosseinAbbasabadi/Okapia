      <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 wow fadeInUp" data-wow-delay="0.4s">
        <div class="single-card">
          <img src="/assets/images/cards/platinum.png" alt="">
          <div class="card-titles">
            <h3>
              <a href="platinum-card.html">بانک پارسیان</a>
            </h3>
          </div>
        </div>
      </div>
      <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 wow fadeInUp" data-wow-delay="0.5s">
        <div class="single-card">
          <img src="/assets/images/cards/gold.png" alt="">
          <div class="card-titles">
            <h3>
              <a href="gold-card.html">بانک ملی</a>
            </h3>
          </div>
        </div>
      </div>
      <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 wow fadeInUp" data-wow-delay="0.6s">
        <div class="single-card">
          <img src="/assets/images/cards/thank-you.png" alt="">
          <div class="card-titles">
            <h3>
              <a href="thank-you-card.html">بانک مسکن</a>
            </h3>
          </div>
        </div>
      </div>
      <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 wow fadeInUp" data-wow-delay="0.7s">
        <div class="single-card">
          <img src="/assets/images/cards/gift.png" alt="">
          <div class="card-titles">
            <h3>
              <a href="gift-card.html">بانک ملت</a>
            </h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!--/Choose Card-->
<!--Award Area-->
<section class="award-area section-padding-2 dark-overlay"
         style="background: url(/assets/images/award.jpg) no-repeat fixed">
  <div class="container">
    <div class="row">
      <div class="col-xl-4 wow fadeInUp" data-wow-delay="0.3s">
        <div class="single-award bootom-after">
          <!-- <i class="pe-7s-medal"></i> -->
          <i class="icon-signup icon-ml"></i>
