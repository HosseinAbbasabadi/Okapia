@using System.Linq
@model List<Okapia.Domain.ViewModels.Job.JobStaredViewModel>

<section class="card-features-area section-padding-2">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-8 centered wow fadeInUp" data-wow-delay="0.3s">
        <div class="section-title">
          <h2>@ViewData["title"]</h2>
          <p>برخی از مراکز سرویس دهی منتخب</p>
        </div>
      </div>
    </div>
    <div class="row">
      
      @foreach (var item in Model.Select((value, index) => new { index, value }))
      {
        if (item.index % 2 == 0)
        {
          <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="card-features-content">
              <div class="card-features-img order-sm-1 order-1 wow fadeInLeft" data-wow-delay="0.4s">
                <img width="600" height="372" src="/JobPhotos/@item.value.JobPictureName" alt="@item.value.JobPictureAlt" title="@item.value.JobPictureTitle"/>
              </div>
              <div class="card-content cl-white order-sm-2 order-2 wow fadeInRight" data-wow-delay="0.4s">
                <h3>@item.value.JobName</h3>
                <p>
                  @item.value.JobSmallDescription
                </p>
                <a class="bttn-mid btn-fill animated fadeInUp" title="@item.value.JobName" asp-controller="JobView" asp-action="Details" asp-route-id="@item.value.JobSlug">
                  مطالعه جزییات
                </a>
              </div>
            </div>
          </div>
        }
        else
        {
          <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="card-features-content">
              <div class="card-content cl-white order-sm-1 order-2 wow fadeInLeft" data-wow-delay="0.5s">
                <h3>@item.value.JobName</h3>
                <p>@item.value.JobSmallDescription</p>
                <a class="bttn-mid btn-fill animated fadeInUp" title="@item.value.JobName" asp-controller="JobView" asp-action="Details" asp-route-id="@item.value.JobSlug">
                  مطالعه جزییات
                </a>
              </div>
              <div class="card-features-img order-sm-2 order-1 wow fadeInRight" data-wow-delay="0.5s">
                <img width="600" height="372" src="/JobPhotos/@item.value.JobPictureName" alt="@item.value.JobPictureAlt" title="@item.value.JobPictureTitle" />
              </div>
            </div>
          </div>
        }
      }

    </div>
  </div>
</section>