@model Okapia.Domain.Commands.Contactus.CreateContact

<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 wow fadeInRight" data-wow-delay="0.4s">
  <div class="contact-form rtl text-right">
    <h3>فرم تماس با اُکاپیا</h3>
    <p>نظرات و سوالات و پیشنهادات با ما به اشتراک بگذارید</p>
    <form id="contact_form">
      <div class="single-field">
        <label for="name">نام</label>
        <input type="text" id="name" name="name">
      </div>
      <div class="single-field">
        <label for="email">ایمیل</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="single-field">
        <label for="message">پیام</label>
        <textarea name="message" id="message" rows="4"></textarea>
      </div>
      <button type="button" class="bttn-mid btn-fill" onclick="createEntity('@Url.Action("Contactus", "Home")','contact_form')">ارسال</button>
    </form>
  </div>
</div>
