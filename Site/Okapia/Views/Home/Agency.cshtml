@model Okapia.Models.Agency

@{
    ViewData["Title"] = "درخواست نمایندگی و عضویت در سیستم اکاپیا";
}

<h1>درخواست نمایندگی و عضویت در سیستم اکاپیا</h1>

<h4>برای ثبت درخواست فرم زیر را کامل کنید:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Agency">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت درخواست" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

