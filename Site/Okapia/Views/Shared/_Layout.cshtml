            </a>
            <a href="#">
              <i class="fab fa-instagram"></i>
            </a>
            <a href="#">
              <i class="fab fa-telegram"></i>
            </a>
            <a href="#">
              <i class="fab fa-twitter"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 d-none d-md-block">
        <div class="row">
          
          @await Component.InvokeAsync("FooterLinks")
          @await Component.InvokeAsync("LatestPagesFooter")

        </div>
      </div>
      <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <div class="copyright centered">
          <p>&copy;طراحی و اجرا <a href="https://tahlildadeh.com">تحلیل داده</a></p>
        </div>
      </div>
    </div>
