@using Microsoft.AspNetCore.WebUtilities
@using Okapia.Areas.Administrator.Controllers

@{
  var provinceName = ViewData["province"];
}

<div class="col-lg-7 col-md-5 clearfix mobile">
  <div class="dropdown dropdown-1">
    <button province-name="@provinceName" type="button" data-toggle="dropdown" class="btn btn-primary dropdown-toggle selected-city">
      @provinceName
      <span class="inline-block icon icon-arrow-down"></span>
    </button>
    <ul class="dropdown-menu">
      @foreach (var province in Provinces.ToList().Where(x => x.Id != 0).OrderBy(x => x.Name))
      {
        var url = Url.Action("Index", "Home", new { area = "" });
        var query = QueryHelpers.AddQueryString(url, "pn", province.Name);
        <li>
          <a href="@query">
            <span class="pull-right">@province.Name</span>
            <span class="badge"></span>
          </a>
        </li>
      }
    </ul>
  </div>
</div>